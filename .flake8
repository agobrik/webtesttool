[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .tox,
    migrations

# Error codes
per-file-ignores =
    __init__.py:F401
    tests/*:S101

# Complexity
max-complexity = 15

# Docstring conventions
docstring-convention = google

# Import order
import-order-style = google
application-import-names = core,modules,utils,database,reporting,cli
