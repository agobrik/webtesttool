# EditorConfig for WebTestool
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Batch files
[*.bat]
end_of_line = crlf

# Shell scripts
[*.sh]
end_of_line = lf

# Configuration files
[{.flake8,.pylintrc}]
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# HTML/CSS/JS
[*.{html,css,js}]
indent_style = space
indent_size = 2
